<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android"
    android:color="@android:color/darker_gray"> <!-- Warna ripple -->

    <!-- Latar belakang tombol dengan radius sudut dan warna hijau -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#408452"/> <!-- Warna latar belakang tombol hijau -->
            <corners android:radius="10dp"/> <!-- Radius sudut pada tombol -->
        </shape>
    </item>

    <!-- Mask untuk efek ripple -->
    <item android:id="@android:id/mask">
        <shape android:shape="rectangle">
            <solid android:color="@android:color/white"/>
            <corners android:radius="10dp"/> <!-- Radius sudut pada mask tetap sama -->
        </shape>
    </item>

</ripple>
