<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bayangan -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Bayangan hitam dengan transparansi -->
            <corners android:radius="20dp" /> <!-- Sudut melengkung untuk bayangan -->
        </shape>
    </item>

    <!-- Latar Belakang Putih -->
    <item android:left="0dp" android:top="0dp" android:right="0dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Latar belakang putih -->
            <corners android:radius="20dp" /> <!-- Sudut melengkung untuk latar belakang -->
        </shape>
    </item>

</layer-list>
